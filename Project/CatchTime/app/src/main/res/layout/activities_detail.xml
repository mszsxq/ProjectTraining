<?xml version="1.0" encoding="utf-8"?>
<com.github.ksoichiro.android.observablescrollview.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/blue"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginBottom="20dp"
            android:text="活动"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bike"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:text="骑车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <TextView
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/weekOccupy"
        android:layout_below="@id/topbar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="每周占用时间"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/view_weekoccupy"
        android:layout_below="@id/weekOccupy"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        >
    </TextView>
    <TextView
        android:layout_below="@id/view_weekoccupy"
        android:id="@+id/dayOccupy"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="平均每天占用时间"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout
        android:id="@+id/view_dayoccupy"
        android:layout_below="@id/dayOccupy"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
      >
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:max="100"
            android:progress="50" />
    </RelativeLayout>
    <TextView
        android:layout_below="@id/view_dayoccupy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日历"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <CalendarView
        android:layout_marginTop="20dp"
        android:layout_below="@id/view_dayoccupy"
        android:id="@+id/calendarView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_below="@id/calendarView"
        android:layout_marginTop="20dp"
        android:id="@+id/note"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="笔记"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />
    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@id/note"
        android:id="@+id/note_content"
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:background="#C07B14"
        android:text="您还没有做笔记"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />
</RelativeLayout>
</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>